extends layout
block content
  script(type="text/javascript").
    window.onload = function(){
    width = document.getElementById('backgroundContainer').offsetWidth;
    height = document.getElementById('backgroundContainer').offsetHeight;
    svgContainer = d3.select(".svg-container").append("svg")
    setInterval(drop,10);
    };
    function drop(){
        var text = Math.round(Math.random());
        var x = Math.random() * width;
        //console.log(width);
        svgContainer
        .append("g")
        .append("text")
        .attr("x", x)
        .attr("y", -200 )
        .attr("dy", "2em")
        .text(text)
        .transition()
          .duration(10000)
          .attr("y",1300)
          .remove();
     }
    
  #site
    #backgroundContainer.svg-container
       #background.svg
    #b.main
      h1= 'Bug Hunter Registration'
      p=  'Congradulations, you have been tasked with removing targeted "bugs" in the system with extreme and due force. Please provide us your contact information so we can provide you live updates on the "source" of the bug that requires "fixing."'
        br
        form(action="register", method="post")
          table
           tr
            td
             Your Full Name
            td
             input(type="text" name="name")
           tr
            td
             Your Location (X.X.XXX format)
            td
             input(type="text" name="location")
           tr
            td
             Your Email
            td
             input(type="text" name="email")
           tr
            td
             input(type="submit" value="submit")